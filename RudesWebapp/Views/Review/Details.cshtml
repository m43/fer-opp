<div>
    @if (Model.Blocked)
    {
        <a asp-action="Unblock" asp-route-id="@Model.Id">Unblock</a>
    }
    else
    {
        <a asp-action="Block" asp-route-id="@Model.Id">Block</a>
    }
    <a asp-action="Index">Back to List</a>
</div>