<!-- Modal -->
<div id="articleDetailsModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="shoppingCartModalTitle">Detalji artikla {{ selectedArticle.name }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body container-fluid">
                <div class="modalOuterDiv row">
                    <div id="modalPictureDiv" class="col-6">
                        <img id="modalPicture" class="productImages" :src="selectedArticle.image==null?'/images/rudes-logo.jpg':selectedArticle.image.path+'?width=300'">
                    </div>
                    <div class="modalContentDiv col-6">
                        <div id="modalArticleName" class="col-12">
                            {{ selectedArticle.name }}
                            <br />
                        </div>
                        <div id="modalArticleDescription" class="col-12">
                            {{ selectedArticle.description }}
                        </div>
                        <div id="modalArticleReview" class="col-12">
                            {{ selectedArticleReview.comment }}
                        </div>
                        <div id="modalArticleSizes" class="col-12">
                            <template v-if="Object.entries(selectedArticle).length != 0 && selectedArticle.quantities.length != 0">
                                <select v-model="size">
                                    <option disabled value="">Odaberite veličinu</option>
                                    <template v-for="(velicina, index) in selectedArticle.quantities">
                                        <option v-if="velicina > 0">{{selectedArticle.sizes[index]}}</option>
                                    </template>
                                </select>
                            </template>
                           
                            <div id="modalArticleQuantity" class="col-12" style="padding-left: 0; margin-left:0;">
                                Unesite broj artikala
                                <br />
                                <input type="number" step="1" min="1" max="" size="2" pattern="" inputmode="" v-model.number="quantity">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Odbaci</button>
                    <button class="btn btn-primary" @@click="addItemToCart(selectedArticle.id, quantity, size)">Dodaj u košaricu</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/articleDetails.js"></script>
<link rel="stylesheet" type="text/css" href="~/css/articleDetails.css">